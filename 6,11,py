###
# Product price analysis
#

previous_price = float(input("Enter previous product price: "))
current_price = float(input("Enter current product price: "))

# Calculate percentage decrease
price_drop_percent = ((previous_price - current_price) / previous_price) * 100

print(f"Current product price: {current_price:.2f}")
print(f"Previous product price: {previous_price:.2f}")

# Recommend purchase if price dropped at least 10%
if price_drop_percent >= 10:
    print("Buy the product!!")
    print(f"Product price reduced by {price_drop_percent:.0f}%")
else:
    print("No significant price drop.")
